<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

       <!-- <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".3">

            <ImageView
                android:id="@+id/iv_inqadptadpt_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/pdf" />

        </RelativeLayout>-->

        <LinearLayout
            android:id="@+id/ll_inqadpt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_inquiryadpt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Details"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_sub_subheasing" />

            <TextView
                android:id="@+id/tv_inquiryadpt_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Description"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_inquiryadpt_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="priority"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:id="@+id/tv_inquiryadpt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Date"
                android:layout_toRightOf="@+id/tv_inquiryadpt_priority"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_normal" />

            <ImageView
                android:id="@+id/iv_adptinq_edit"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toLeftOf="@+id/iv_adptinq_notification"
                android:layout_marginRight="5dp"
                android:src="@mipmap/edit"/>

            <ImageView
                android:id="@+id/iv_adptinq_notification"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_notifications_none_black_24dp"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray">

            </View>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>